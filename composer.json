{
    "name": "lenorix/ai",
    "description": "PHP SDK for AI APIs",
    "keywords": [
        "lenorix",
        "ai"
    ],
    "homepage": "https://github.com/lenorix/php-ai",
    "license": "Unlicense",
    "authors": [
        {
            "name": "Jesus Hernandez",
            "email": "jesushdez@protonmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1|^8.2|^8.3|^8.4",
        "guzzlehttp/guzzle": "^7.9"
    },
    "require-dev": {
        "pestphp/pest": "^3.0",
        "laravel/pint": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Lenorix\\Ai\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Lenorix\\Ai\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
            "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
